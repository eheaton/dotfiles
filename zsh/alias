# ALIAS

alias l='ls -la'
alias compc='compass compile'
alias compw='compass watch'
alias compcc='compass clean; compass compile'

alias artisan='php artisan'
alias lc='php artisan generate:controller'
alias lv='php artisan generate:view'
alias lm='php artisan generate:model'
alias art='php artisan'

alias gchmod='git update-index --chmod=+x'

alias repos='cd /var/repositories'
alias sites='cd /var/www/sites'

alias cloud='cloudapp'
alias comp='composer'

alias vlc='/Applications/VLC.app/Contents/MacOS/VLC -I rc'

alias mt='multitail -CS php'

function marked(){
    if [ -n $1 ]; then
        open -a "marked 2.app" $1
    else
        open -a "marked 2.app"
    fi
}

# alias subl='subl -w'

alias gp='git pull'
alias gpp='git pull; git push;'

alias ls='ls -G'
alias ll='ls -la'

alias sing='say --voice="Good News"'

take() {
	mkdir $1
	cd $1
}

show_colors() {
	for x in 0 1 4 5 7 8;
	do
	        for i in `seq 30 37`;
	        do
	                for a in `seq 40 47`;
	                do
	                        echo -ne "\e[$x;$i;$a""m\\\e[$x;$i;$a""m\e[0;37;40m ";
	                done;
	                echo;
	        done;
	done;
	echo "";
}

reload_shell(){
    if [[ -n $( echo $SHELL | grep zsh ) ]]; then
        . ~/.zshrc
    else
        source ~/.bash_profile
        source ~/.bashrc
    fi
}

flush_dns(){
    # Only works with OS X Yosemite & OS X El Capitan
    sudo dscacheutil -flushcache; sudo killall -HUP mDNSResponder;
}
