# ENVIRONMENT VARIABLES

# Setting the PATH for custom home folder in
# ~ user directory
PATH="~/.bin:$PATH"

# PATH setting for RVM
#
PATH=$PATH:$HOME/.rvm/bin:~/.composer/vendor/bin

# PATH setting for PHP
#
PATH="/Applications/MAMP/bin/php/php5.6.10/bin:${PATH}"

# Custom Misc Paths
#
PATH="/usr/local/bin:$PATH"
PATH=/usr/local/share/npm/bin:$PATH
PATH=/usr/local/sbin:$PATH

# Setting PATH for MacPython 2.5
# The orginal version is saved in .bash_profile.pysave
PATH="/Library/Frameworks/Python.framework/Versions/Current/bin:${PATH}"

# Setting PATH for Python 2.7
# The orginal version is saved in .bash_profile.pysave
PATH="/Library/Frameworks/Python.framework/Versions/2.7/bin:${PATH}"
export PATH

[[ -s "$HOME/.rvm/scripts/rvm" ]] && . "$HOME/.rvm/scripts/rvm" # Load RVM function
export EDITOR='subl -w'

export CLICOLOR=1
export LSCOLORS=exfxcxdxbxegedabagacad

# Tell grep to highlight matches
export GREP_OPTIONS='--color=auto'

# Updated the Java Version
export JAVA_HOME=`/usr/libexec/java_home -v 1.7`

# Creative Suite SDK
export CSSDK=/Users/eheaton/Documents/Resources/Creative\ Suite/SDK
